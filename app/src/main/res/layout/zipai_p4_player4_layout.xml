<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="bottom">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="3dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/zipai_player4_header_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#fff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/head0"/>
                <TextView
                    android:id="@+id/zipai_player4_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jalfer"
                    android:textSize="10sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/zipai_player4_jifen_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="10sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/zipai_player4_huzi_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="16 èƒ¡"
                    android:textSize="10sp"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/zipai_player4_giveup_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="5"
                android:overScrollMode="never"
                android:scrollbars="none">
            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/zipai_player4_jinzi_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="8"
                android:overScrollMode="never"
                android:scrollbars="none">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="right">

        <ImageView
            android:id="@+id/zipai_player4_newcard_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/zipai_455"
            android:layout_margin="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/zipai_431"/>
    </LinearLayout>

</LinearLayout>
